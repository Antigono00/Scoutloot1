  <style>
    /* Minifig Page Specific Styles */
    .minifig-page {
      min-height: 100vh;
      background: var(--bg-primary);
      padding-top: 80px;
    }
    
    .minifig-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 24px;
    }
    
    .minifig-header {
      display: flex;
      gap: 32px;
      margin-bottom: 40px;
    }
    
    .minifig-image {
      flex-shrink: 0;
      width: 200px;
      height: 200px;
      background: var(--bg-card);
      border-radius: 16px;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .minifig-image img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }
    
    .minifig-image-placeholder {
      font-size: 80px;
    }
    
    .minifig-info {
      flex: 1;
    }
    
    .minifig-fig-num {
      font-size: 0.9rem;
      color: var(--accent);
      font-weight: 600;
      margin-bottom: 8px;
    }
    
    .minifig-name {
      font-size: 2rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: 12px;
    }
    
    .minifig-meta {
      display: flex;
      gap: 24px;
      color: var(--text-muted);
      font-size: 0.95rem;
      margin-bottom: 16px;
    }
    
    .minifig-meta-item {
      display: flex;
      align-items: center;
      gap: 6px;
    }
    
    .minifig-badges {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
      margin-bottom: 16px;
    }
    
    .minifig-badge {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      padding: 4px 12px;
      background: rgba(147, 51, 234, 0.2);
      border: 1px solid rgba(147, 51, 234, 0.3);
      border-radius: 20px;
      font-size: 0.8rem;
      color: #c084fc;
    }
    
    .minifig-stats {
      display: flex;
      gap: 24px;
      margin-top: 16px;
    }
    
    .minifig-stat {
      text-align: left;
    }
    
    .minifig-stat-value {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--accent);
    }
    
    .minifig-stat-label {
      font-size: 0.85rem;
      color: var(--text-muted);
    }
    
    .minifig-actions {
      display: flex;
      gap: 12px;
      margin-top: 20px;
    }
    
    /* Tabs */
    .tabs-container {
      margin-bottom: 32px;
    }
    
    .tabs {
      display: flex;
      gap: 8px;
      border-bottom: 1px solid rgba(255,255,255,0.1);
      padding-bottom: 0;
    }
    
    .tab {
      padding: 12px 20px;
      background: none;
      border: none;
      color: var(--text-muted);
      cursor: pointer;
      font-size: 0.95rem;
      font-weight: 500;
      position: relative;
      transition: color 0.2s;
    }
    
    .tab:hover {
      color: var(--text-primary);
    }
    
    .tab.active {
      color: var(--accent);
    }
    
    .tab.active::after {
      content: '';
      position: absolute;
      bottom: -1px;
      left: 0;
      right: 0;
      height: 2px;
      background: var(--accent);
    }
    
    .tab-content {
      display: none;
    }
    
    .tab-content.active {
      display: block;
    }
    
    /* Deals Grid */
    .deals-section {
      margin-bottom: 32px;
    }
    
    .deals-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 16px;
    }
    
    .deals-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text-primary);
    }
    
    .deal-count {
      color: var(--text-muted);
      font-size: 0.9rem;
    }
    
    .deals-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 16px;
    }
    
    .deal-card {
      background: var(--bg-card);
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 12px;
      padding: 16px;
      transition: border-color 0.2s, transform 0.2s;
    }
    
    .deal-card:hover {
      border-color: rgba(255,255,255,0.2);
      transform: translateY(-2px);
    }
    
    .deal-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 12px;
    }
    
    .deal-price {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--accent);
    }
    
    .deal-source {
      display: flex;
      align-items: center;
      gap: 4px;
      font-size: 0.8rem;
      color: var(--text-muted);
      padding: 4px 8px;
      background: rgba(255,255,255,0.05);
      border-radius: 4px;
    }
    
    .deal-breakdown {
      font-size: 0.85rem;
      color: var(--text-secondary);
      margin-bottom: 12px;
    }
    
    .deal-breakdown span {
      display: block;
      margin-bottom: 2px;
    }
    
    .deal-seller {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 0.85rem;
      color: var(--text-muted);
      margin-bottom: 12px;
    }
    
    .deal-seller-rating {
      color: #fbbf24;
    }
    
    .deal-link {
      display: block;
      text-align: center;
      padding: 10px;
      background: var(--accent);
      color: var(--bg-primary);
      font-weight: 600;
      border-radius: 8px;
      text-decoration: none;
      transition: opacity 0.2s;
    }
    
    .deal-link:hover {
      opacity: 0.9;
    }
    
    /* Chart Section */
    .chart-section {
      background: var(--bg-card);
      border-radius: 16px;
      padding: 24px;
      margin-bottom: 32px;
    }
    
    .chart-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    
    .chart-title {
      font-size: 1.25rem;
      font-weight: 600;
    }
    
    .chart-controls {
      display: flex;
      gap: 8px;
    }
    
    .chart-btn {
      padding: 6px 12px;
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 6px;
      color: var(--text-muted);
      cursor: pointer;
      font-size: 0.85rem;
      transition: all 0.2s;
    }
    
    .chart-btn:hover {
      background: rgba(255,255,255,0.1);
    }
    
    .chart-btn.active {
      background: var(--accent);
      color: var(--bg-primary);
      border-color: var(--accent);
    }
    
    .chart-container {
      height: 300px;
      position: relative;
    }
    
    /* No Data State */
    .no-data {
      text-align: center;
      padding: 60px 20px;
      color: var(--text-muted);
    }
    
    .no-data-icon {
      font-size: 48px;
      margin-bottom: 16px;
    }
    
    .no-data-text {
      font-size: 1.1rem;
      margin-bottom: 8px;
    }
    
    .no-data-sub {
      font-size: 0.9rem;
      opacity: 0.7;
    }
    
    /* Loading State */
    .loading {
      text-align: center;
      padding: 60px 20px;
      color: var(--text-muted);
    }
    
    .loading-spinner {
      width: 40px;
      height: 40px;
      border: 3px solid rgba(255,255,255,0.1);
      border-top-color: var(--accent);
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 16px;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    
    /* Stats Cards */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
      margin-bottom: 32px;
    }
    
    .stat-card {
      background: var(--bg-card);
      border-radius: 12px;
      padding: 20px;
    }
    
    .stat-card-label {
      font-size: 0.85rem;
      color: var(--text-muted);
      margin-bottom: 8px;
    }
    
    .stat-card-value {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--text-primary);
    }
    
    .stat-card-value.positive {
      color: #22c55e;
    }
    
    .stat-card-value.negative {
      color: #ef4444;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
      .minifig-header {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }
      
      .minifig-meta {
        justify-content: center;
        flex-wrap: wrap;
      }
      
      .minifig-stats {
        justify-content: center;
      }
      
      .minifig-actions {
        justify-content: center;
      }
      
      .minifig-name {
        font-size: 1.5rem;
      }
      
      .deals-grid {
        grid-template-columns: 1fr;
      }
      
      .chart-header {
        flex-direction: column;
        gap: 12px;
      }
    }
  </style>
</head>
