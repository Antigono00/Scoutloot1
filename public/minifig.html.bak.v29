  <!-- JavaScript -->
  <script>
    // Global state
    let minifigData = null;
    let priceChart = null;
    let currentChartDays = 30;
    
    // Get minifig ID from URL
    function getMinifigIdFromUrl() {
      const path = window.location.pathname;
      const match = path.match(/\/minifig\/([^\/]+)/);
      return match ? match[1] : null;
    }
    
    // Load minifig data
    async function loadMinifigData() {
      const figNum = getMinifigIdFromUrl();
      if (!figNum) {
        showError();
        return;
      }
      
      try {
        const response = await fetch(`/api/minifigs/${figNum}/detail`);
        if (!response.ok) {
          throw new Error('Minifig not found');
        }
        
        minifigData = await response.json();
        renderMinifig();
        
      } catch (error) {
        console.error('Error loading minifig:', error);
        showError();
      }
    }
    
    // Render minifig data
    function renderMinifig() {
      document.getElementById('loading-state').style.display = 'none';
      document.getElementById('minifig-content').style.display = 'block';
      
      const { minifig, deals, history, stats } = minifigData;
      
      // Basic info
      document.getElementById('minifig-fig-num').textContent = minifig.fig_num;
      document.getElementById('minifig-name').textContent = minifig.name;
      document.getElementById('minifig-parts-count').textContent = minifig.num_parts ? `${minifig.num_parts} parts` : 'Parts unknown';
      
      // Image
      const imageEl = document.getElementById('minifig-image');
      if (minifig.image_url) {
        imageEl.innerHTML = `<img src="${minifig.image_url}" alt="${minifig.name}" onerror="this.parentElement.innerHTML='<span class=\\'minifig-image-placeholder\\'>üßç</span>'">`;
      }
      
      // Theme
      if (minifig.theme) {
        document.getElementById('minifig-theme').textContent = minifig.theme;
        document.getElementById('minifig-theme-item').style.display = 'flex';
      }
      
      // Watchers
      if (stats.watchers > 0) {
        document.getElementById('minifig-watchers').textContent = stats.watchers;
        document.getElementById('minifig-watchers-badge').style.display = 'inline-flex';
      }
      
      // Best prices
      if (deals.new.length > 0 || deals.used.length > 0) {
        document.getElementById('minifig-price-stats').style.display = 'flex';
        document.getElementById('best-price-new').textContent = deals.new.length > 0 
          ? `‚Ç¨${deals.new[0].total_eur.toFixed(2)}` 
          : '-';
        document.getElementById('best-price-used').textContent = deals.used.length > 0 
          ? `‚Ç¨${deals.used[0].total_eur.toFixed(2)}` 
          : '-';
      }
      
      // Stats grid
      if (stats.lowest_new || stats.trend_7d !== null || stats.trend_30d !== null || stats.days_tracked > 0) {
        document.getElementById('stats-grid').style.display = 'grid';
        
        if (stats.lowest_new) {
          document.getElementById('stat-lowest').textContent = `‚Ç¨${stats.lowest_new.toFixed(2)}`;
        }
        
        if (stats.trend_7d !== null) {
          const trend7d = document.getElementById('stat-trend-7d');
          trend7d.textContent = `${stats.trend_7d > 0 ? '+' : ''}${stats.trend_7d.toFixed(1)}%`;
          trend7d.classList.add(stats.trend_7d < 0 ? 'positive' : stats.trend_7d > 0 ? 'negative' : '');
        }
        
        if (stats.trend_30d !== null) {
          const trend30d = document.getElementById('stat-trend-30d');
          trend30d.textContent = `${stats.trend_30d > 0 ? '+' : ''}${stats.trend_30d.toFixed(1)}%`;
          trend30d.classList.add(stats.trend_30d < 0 ? 'positive' : stats.trend_30d > 0 ? 'negative' : '');
        }
        
        if (stats.days_tracked > 0) {
          document.getElementById('stat-days-tracked').textContent = `${stats.days_tracked} days`;
        }
      }
      
      // Render deals
      renderDeals(deals.new, 'new-deals-grid', 'new-deal-count');
      renderDeals(deals.used, 'used-deals-grid', 'used-deal-count');
      
      // Initialize chart
      initChart(history);
    }
    
    // Render deals grid
    function renderDeals(deals, gridId, countId) {
      const grid = document.getElementById(gridId);
      const count = document.getElementById(countId);
      
      count.textContent = `${deals.length} deal${deals.length !== 1 ? 's' : ''}`;
      
      if (deals.length === 0) {
        return;
      }
      
      grid.innerHTML = deals.map(deal => {
        const sourceIcon = deal.source === 'ebay' ? 'üõí eBay' : 'ü¶â BrickOwl';
        const rating = deal.seller_feedback ? `‚≠ê ${deal.seller_feedback}%` : '';
        const country = deal.ship_from_country ? `üìç ${deal.ship_from_country}` : '';
        
        return `
          <div class="deal-card">
            <div class="deal-header">
              <div class="deal-price">‚Ç¨${deal.total_eur.toFixed(2)}</div>
              <div class="deal-source">${sourceIcon}</div>
            </div>
            <div class="deal-breakdown">
              <span>üí∞ Item: ‚Ç¨${deal.price_eur.toFixed(2)}</span>
              <span>üì¶ Shipping: ‚Ç¨${(deal.shipping_eur || 0).toFixed(2)}</span>
            </div>
            <div class="deal-seller">
              <span>üë§ ${deal.seller || 'Unknown'}</span>
              ${rating ? `<span class="deal-seller-rating">${rating}</span>` : ''}
              ${country ? `<span>${country}</span>` : ''}
            </div>
            <a href="${deal.url}" target="_blank" rel="noopener" class="deal-link">View Deal ‚Üí</a>
          </div>
        `;
      }).join('');
    }
    
    // Initialize price chart
    function initChart(history) {
      const ctx = document.getElementById('price-chart').getContext('2d');
      
      priceChart = new Chart(ctx, {
        type: 'line',
        data: {
          datasets: []
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          interaction: {
            mode: 'index',
            intersect: false,
          },
          plugins: {
            legend: {
              position: 'top',
              labels: {
                color: '#A0A0B0',
                font: { family: "'Outfit', sans-serif" }
              }
            },
            tooltip: {
              backgroundColor: '#1A1A25',
              titleColor: '#FFFFFF',
              bodyColor: '#A0A0B0',
              borderColor: 'rgba(255,255,255,0.1)',
              borderWidth: 1,
              callbacks: {
                label: function(context) {
                  return `${context.dataset.label}: ‚Ç¨${context.raw.y.toFixed(2)}`;
                }
              }
            }
          },
          scales: {
            x: {
              type: 'time',
              time: {
                unit: 'day',
                displayFormats: { day: 'MMM d' }
              },
              grid: { color: 'rgba(255,255,255,0.05)' },
              ticks: { color: '#606070' }
            },
            y: {
              grid: { color: 'rgba(255,255,255,0.05)' },
              ticks: {
                color: '#606070',
                callback: function(value) {
                  return '‚Ç¨' + value;
                }
              }
            }
          }
        }
      });
      
      loadChartData(currentChartDays);
    }
    
    // Load chart data for specified days
    async function loadChartData(days) {
      if (!minifigData) return;
      
      const figNum = getMinifigIdFromUrl();
      
      try {
        const response = await fetch(`/api/minifigs/${figNum}/history?days=${days}`);
        if (!response.ok) throw new Error('Failed to load history');
        
        const history = await response.json();
        
        // Process data
        const newData = (history.data || [])
          .filter(h => h.condition === 'new' && h.min_price)
          .map(h => ({ x: new Date(h.date), y: h.min_price }));
        
        const usedData = (history.data || [])
          .filter(h => h.condition === 'used' && h.min_price)
          .map(h => ({ x: new Date(h.date), y: h.min_price }));
        
        // Update chart
        priceChart.data.datasets = [];
        
        if (newData.length > 0) {
          priceChart.data.datasets.push({
            label: 'New (Min)',
            data: newData,
            borderColor: '#22c55e',
            backgroundColor: 'rgba(34, 197, 94, 0.1)',
            borderWidth: 2,
            fill: false,
            tension: 0.1,
            pointRadius: 2,
            pointHoverRadius: 5,
          });
        }
        
        if (usedData.length > 0) {
          priceChart.data.datasets.push({
            label: 'Used (Min)',
            data: usedData,
            borderColor: '#f59e0b',
            backgroundColor: 'rgba(245, 158, 11, 0.1)',
            borderWidth: 2,
            fill: false,
            tension: 0.1,
            pointRadius: 2,
            pointHoverRadius: 5,
          });
        }
        
        priceChart.update();
        
      } catch (error) {
        console.error('Error loading chart data:', error);
      }
    }
    
    // Show error state
    function showError() {
      document.getElementById('loading-state').style.display = 'none';
      document.getElementById('error-state').style.display = 'block';
    }
    
    // Setup tabs
    function setupTabs() {
      document.querySelectorAll('.tab').forEach(tab => {
        tab.addEventListener('click', () => {
          const tabId = tab.dataset.tab;
          
          // Update active tab
          document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
          tab.classList.add('active');
          
          // Update active content
          document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
          document.getElementById(`tab-${tabId}`).classList.add('active');
        });
      });
    }
    
    // Setup chart controls
    function setupChartControls() {
      document.querySelectorAll('.chart-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const days = parseInt(btn.dataset.days);
          currentChartDays = days;
          
          // Update active button
          document.querySelectorAll('.chart-btn').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          
          // Load new data
          loadChartData(days);
        });
      });
    }
    
    // Create watch from page
    function createWatchFromPage() {
      if (!minifigData) return;
      
      // Check if logged in (simple check - look for auth token)
      const token = localStorage.getItem('scoutloot_user');
      if (!token) {
        window.location.href = '/?action=signup&minifig=' + minifigData.minifig.fig_num;
        return;
      }
      
      // User is logged in - store in sessionStorage and redirect to dashboard
      sessionStorage.setItem('pendingWatchMinifig', minifigData.minifig.fig_num);
      window.location.href = '/';
    }
    
    // Initialize on load
    document.addEventListener('DOMContentLoaded', () => {
      setupTabs();
      setupChartControls();
      loadMinifigData();
    });
  </script>
  
  <!-- Main App JS (for modals, auth, etc.) -->
  <script src="/js/app.js"></script>
</body>
</html>
