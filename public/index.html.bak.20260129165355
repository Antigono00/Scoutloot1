  <!-- JavaScript (EXTRACTED) -->
  <script src="/js/app.js"></script>
  
  <!-- Language Switcher Script -->
  <script>
    // Initialize language switcher from server-injected data
    (function() {
      const dropdown = document.getElementById('language-dropdown');
      const btn = document.getElementById('language-btn');
      const flagEl = document.getElementById('current-lang-flag');
      const codeEl = document.getElementById('current-lang-code');
      
      if (!window.__SCOUTLOOT_LANGUAGES__ || !dropdown) return;
      
      const languages = window.__SCOUTLOOT_LANGUAGES__;
      const currentLang = window.__SCOUTLOOT_LANG__ || 'en';
      
      // Set current language display
      const current = languages.find(l => l.isCurrent) || languages[0];
      if (current) {
        flagEl.textContent = current.flag;
        codeEl.textContent = current.code.toUpperCase();
      }
      
      // Build dropdown
      dropdown.innerHTML = languages.map(lang => `
        <a href="${lang.url}" class="language-option ${lang.isCurrent ? 'active' : ''}" data-lang="${lang.code}">
          <span class="language-flag">${lang.flag}</span>
          <span class="language-name">${lang.nativeName}</span>
          ${lang.isCurrent ? '<span class="check">âœ“</span>' : ''}
        </a>
      `).join('');
      
      // Toggle dropdown
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        dropdown.classList.toggle('show');
      });
      
      // Close on outside click
      document.addEventListener('click', () => {
        dropdown.classList.remove('show');
      });
    })();
  </script>
</body>
</html>
